<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flamingo.onemovil.select_maq">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <ListView
            android:id="@+id/olst_maq"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_weight="3"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/obtn_regr_maq"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@color/Coral"
                android:text="REGRESAR" />

            <Button
                android:id="@+id/obtn_foto_maq"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:enabled="false"
                android:text="FOTO METROS" />

            <Button
                android:id="@+id/obtn_sele_maq"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:background="@color/Chartreuse"
                android:enabled="false"
                android:text="SELECCIONAR" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
