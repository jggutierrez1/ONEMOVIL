<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AliceBlue"
    android:longClickable="true"
    tools:context="flamingo.onemovil.uploadfiletoserver">

    <TextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Toque el icono para subir el archivo"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ivAttachment"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="231dp"
        android:src="@android:drawable/ic_menu_upload_you_tube" />

    <TextView
        android:id="@+id/tv_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivAttachment"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="MENSAGE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/b_salir"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivAttachment"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Salir"
        android:textSize="20sp" />

    <Button
        android:id="@+id/b_upload"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Subir"
        android:textSize="20sp" />

</RelativeLayout>