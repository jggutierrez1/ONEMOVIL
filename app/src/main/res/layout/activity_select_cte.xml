<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flamingo.onemovil.select_cte">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/titulo_lst_cte"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.03"
            android:background="@android:color/background_light"
            android:fontFamily="sans-serif"
            android:text="[SELECCIONAR CLIENTES]"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/olst_cte"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_weight="3"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/obtn_regr_cte"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/Coral"
                android:text="REGRESAR"
                android:textColor="@color/Black" />

            <Button
                android:id="@+id/obtn_sele_cte"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@color/Chartreuse"
                android:enabled="false"
                android:text="SELECCIONAR" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
