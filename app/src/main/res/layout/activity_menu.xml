<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flamingo.onemovil.menu">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU PRINCIPAL."
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/olempresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPRESA:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/oDeviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID. DISPOSITIVO:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/oLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="." />

            <EditText
                android:id="@+id/oEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:inputType="textPersonName"
                android:text="Name" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_upd"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/Chartreuse"
                android:fontFamily="sans-serif"
                android:text="ACTUALIZAR DATOS Y MAQUINAS (BAJAR DE LA NUBE CON WIFI)"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_emp"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="sans-serif"
                android:text="SELECCIONAR EMPRESA"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_cte"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:singleLine="false"
                android:text="SELECCIONAR CLIENTE"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_maq"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="SELECCIONAR MAQUINA"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_capt"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/AliceBlue"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="REGISTRAR METROS  DE MAQUINA."
                android:textColor="@color/DarkBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/btn_list_prn1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/AliceBlue"
                android:fontFamily="sans-serif"
                android:text="LISTADO DE MAQUINAS CAPTURADAS CON METROS"
                android:textColor="@color/DarkBlue"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_canc_colec"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/Red"
                android:enabled="true"
                android:fontFamily="sans-serif"
                android:text="ELIMINAR TODAS LAS COLECTA RELIZADAS"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_fin_colec"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/DarkGreen"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="REGISTRAR FACTURA GLOBAL."
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/btn_list_prn2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/DarkGreen"
                android:fontFamily="sans-serif"
                android:text="LISTADO DE MAQUINAS COLECTADAS"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_send"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/Chartreuse"
                android:enabled="false"
                android:fontFamily="sans-serif"
                android:text="ENVIAR COLECTAS (SUBIR A LA NUBE CON WIFI)"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/btn_list_prn3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:fontFamily="sans-serif"
                android:text="REPORTE DE COLECTAS POR MAQUINA (CLIENTES FINALIZADOS)"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="7dp" />

            <Button
                android:id="@+id/obtn_exit"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/Coral"
                android:fontFamily="sans-serif"
                android:text="SALIR"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>