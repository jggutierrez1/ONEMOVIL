<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="flamingo.onemovil.menu">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU PRINCIPAL."
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="35sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/olempresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EMPRESA:"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textSize="30sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/oDeviceId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID. DISPOSITIVO:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/oLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="." />

            <EditText
                android:id="@+id/oEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/obtn_upd"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="CARGAR DATOS BASICOS" />

            <Button
                android:id="@+id/obtn_emp"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:text="INICIAR COLECTA [EMPRESA]" />

            <Button
                android:id="@+id/obtn_cte"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:enabled="false"
                android:text="SELECCIONAR CLIENTE" />

            <Button
                android:id="@+id/obtn_maq"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:enabled="false"
                android:text="SELECCIONAR MAQUINA" />

            <Button
                android:id="@+id/obtn_capt"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:enabled="false"
                android:text="REGISTRAR METROS MAQUINAS" />

            <Button
                android:id="@+id/obtn_canc_colec"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:enabled="false"
                android:text="DESCARTAR COLECTA" />

            <Button
                android:id="@+id/obtn_fin_colec"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:enabled="false"
                android:text="FINALIZAR COLECTA" />

            <Button
                android:id="@+id/obtn_send"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:editable="false"
                android:enabled="false"
                android:text="ENVIAR COLECTAS" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/obtn_exit"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/Coral"
                android:text="SALIR"
                android:textColor="@android:color/black" />

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>